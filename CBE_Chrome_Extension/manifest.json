{
  "name": "College of Business and Economics GPA Calculator",
  "description": "This extension allows users to see their current CBE GPA and add test classes to see how that will affect their GPA",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background":{
    "persistent":true,
    "scripts":["background.js"]
  },
  "content_scripts":[{
    "matches":["https://admin.wwu.edu/pls/wwis/wwskahst.WWU_ViewTran"],
    "js":["content.js"],
    "run_at": "document_idle"
    }],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
