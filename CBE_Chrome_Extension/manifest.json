{
  "name": "WWU CBE Grade Calculator",
  "description": "An application allowing users to view their current CBE GPA, and add/remove classes to see how these changes will effect their GPA.",
  "version": "0.0.0.7",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "background":{
    "persistent": true,
    "scripts":["js/background.js"]
  },
  "content_scripts":[{
      "matches":["https://admin.wwu.edu/pls/wwis/wwskahst.WWU_ViewTran",
        "https://admin.wwu.edu/pls/wwis/wwfkfhst.P_FacDispCurrent"],
    "js":["js/content.js"],
    "run_at": "document_end"
    }],
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
